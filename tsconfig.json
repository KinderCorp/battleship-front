{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@helpers/*": ["./src/shared/_helpers/*"],
      "@home/*": ["./src/home/*"],
      "@hooks/*": ["./src/shared/_hooks/*"],
      "@mocks/*": ["./mocks/*"],
      "@pages/*": ["./pages/*"],
      "@shared/*": ["./src/shared/*"],
      "@src/*": ["./src/*"],
      "@styles/*": ["./styles/*"],
      "@translation/*": ["./src/translation/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
